<databaseChangeLog>
    <changeSet author="Vadym" id="1">
        <addColumn tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)" />
            <column name="surname" type="VARCHAR(255)" />
            <column name="email" type="VARCHAR(255)" />
            <column name="password" type="VARCHAR(255)" />
        </addColumn>
    </changeSet>
    <changeSet author="Vadym" id="2">
        <addColumn tableName="user_disciplines">
            <column name="discipline_id" type="BIGINT" autoIncrement="true" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="discipline_title" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

        </addColumn>
    </changeSet>

</databaseChangeLog>

